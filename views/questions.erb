<!DOCTYPE html>

<html>
    <head>
        <title> Test Vocacional </title>
        <link rel='stylesheet' type='text/css' href='/styles.css'/>
        <link rel="icon" type="favicon/x-icon" href="/icon.png">
    </head>

    <body>
        <header id="header">
			<nav id="menu">
				<ul>
					<li><a href="/careers">CARRERAS</a></li>
					<li><a href="https://github.com/ENPera1994/AyDS-speedrun">CODIGO FUENTE</a></li>
				</ul>
			</nav>
		</header>
		<div id="banner">
			<h1 >Test Vocacional</h1>
		</div>
        <br>
		<br>
        <div id="pregunta">
            <a> <%= @question.number %> <%= @question.name %> </a> 
            <a> <%= @question.description %> </a> <br>
        </div>
        <br>
        
        <form action='/responses/<%= @survey_id.to_s %>' method='POST'>
            <div id="opcion">
                <% @question.choices.each do |choice| %>
                        <input type='radio' name='choice_id' checked='checked' value=<%= choice.id %>>
                        <span class='checkmark'></span>
                        <%= choice.text %>
                        <br>
                <% end %>
            </div>
            <button id='next' class='button' type='submit' name='question_id' value='<%= @question.id %>' > Siguiente </button> 
        </form>
    </body>
</html>